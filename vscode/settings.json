{
  // VSCODE

  /* Debugging */
  "debug.allowBreakpointsEverywhere": true,

  /* Editor */
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.renderLineHighlight": "none",

  /* Extension */
  "extensions.ignoreRecommendations": true,

  /* Telemetry */
  "telemetry.telemetryLevel": "off",

  /* Update */
  "update.mode": "none",

  /* Window */
  "window.autoDetectColorScheme": true,
  "window.commandCenter": true,
  "window.restoreWindows": "none",
  "window.titleBarStyle": "custom",

  /* Workbench */
  "workbench.colorTheme": "GitHub Light",
  "workbench.colorCustomizations": {
    "[*Light*][Adwaita Light & colorful status bar]": {
      "breadcrumb.background": "#FFFFFF",
      "editorGroupHeader.tabsBackground": "#FAFAFA",
      "tab.activeBackground": "#FFFFFF",
      "tab.hoverBackground": "#FDFDFD",
      "tab.inactiveBackground": "#FAFAFA"
    },
    "[*Dark*][Adwaita Dark & colorful status bar]": {
      "breadcrumb.background": "#1D1D1D",
      "editorGroupHeader.tabsBackground": "#242424",
      "tab.activeBackground": "#1D1D1D",
      "tab.hoverBackground": "#202020",
      "tab.inactiveBackground": "#242424"
    }
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.preferredDarkColorTheme": "Adwaita Dark & colorful status bar",
  "workbench.preferredLightColorTheme": "Adwaita Light & colorful status bar",
  "workbench.productIconTheme": "adwaita",
  "workbench.tree.indent": 12,

  // LANGUAGES

  /* HTML */
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* Java */
  "java.inlayHints.parameterNames.enabled": "none",

  /* JavaScript */
  "javascript.updateImportsOnFileMove.enabled": "always",

  /* JSON */
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* Svelte */
  "svelte.enable-ts-plugin": true,

  /* TypeScript */
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
